@model AgregarDepartamentos
@{
    ViewData["Title"] = "Agregar Departamentos";
}

<h2>Agregar Departamento</h2>
<input id="viewBagDepartamento" value="@ViewBag.Departamento" readonly class="form-control" hidden />
<form asp-action="AgregarDepartamentos">
    <div class="mb-3">
        <label asp-for="Departamento" class="form-label"></label>
        <input asp-for="Departamento" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Crear Departamento</button>
</form>
<div class="mb-3 mt-3">
    <a asp-action="Inicio" class="btn btn-dark">Regresar al menu principal</a>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Departamentos.js" asp-append-version="true"></script>
    <script>


    </script>
}